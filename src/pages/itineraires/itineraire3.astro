---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Itinéraire Marseille > Toulouse',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Soutenez le projet',
          href: 'https://fr.tipeee.com/transiscapade',
        },
        {
          variant: 'primary',
          text: 'Facebook',
          href: 'https://www.facebook.com/profile.php?id=61556861211105',
        },
        {
          variant: 'primary',
          text: 'Vidéos',
          href: 'https://www.youtube.com/@Transiscapade-rm8es',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Itinéraire"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Soutenez le projet', href: 'https://fr.tipeee.com/transiscapade' },
      { text: 'Facebook', href: 'https://www.facebook.com/profile.php?id=61556861211105' },
      { text: 'Vidéos', href: 'https://www.youtube.com/@Transiscapade-rm8es' },
    ]}
    image={{ src: '~/assets/images/Marseille-Toulouse.jpeg', alt: 'Yannick sur son vhélio' }}
  >
    <Fragment slot="title">
      Marseille > Toulouse
    </Fragment>

    <Fragment slot="subtitle">
Lundi 1/04 - Marseille > Auriol
<br />- Mardi 2/04 - Aix-en-Provence
<br />- Mercredi 3/04 - Pélissanne
<br />- Jeudi 4/04 - Arles
<br />- Vendredi 5/04 - Saint-gilles
<br />- Samedi 6/04 - Aigues mortes
<br />- Dimanche 7/04 - Palavas les flots
<br />- Lundi 8/04 - Poussan
<br />- 13/04 - Agde
<br />- 14/04 - Béziers 
<br />- 15/04 - Felines-Minervois
<br />- 16/04 - Lézignan-corbiere
<br />- 17/04 - Carcassonne
<br />- 18/04 - Castelnaudary
<br />- 19/04 - Labarthe sur leze, puis le 20/04 à Toulouse
    </Fragment>
  </Hero2>
