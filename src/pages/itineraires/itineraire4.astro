---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Itinéraire Toulouse > Bordeaux',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Soutenez le projet',
          href: 'https://fr.tipeee.com/transiscapade',
        },
        {
          variant: 'primary',
          text: 'Vidéos',
          href: 'https://www.youtube.com/@Transiscapade',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Itinéraire"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Soutenez', icon: 'tabler:moneybag', href: 'https://fr.tipeee.com/transiscapade' },
      { target: '_blank', text: 'Facebook', icon: 'tabler:brand-facebook', href: 'https://www.facebook.com/profile.php?id=61556861211105' },
      { target: '_blank', text: 'Instagram', icon: 'tabler:brand-instagram', href: 'https://www.instagram.com/transiscapade_1/' },
      { target: '_blank', text: 'LinkedIn', icon: 'tabler:brand-linkedin', href: 'https://www.linkedin.com/in/yannick-duthe-569a741b/' },
    ]}
    image={{ src: '~/assets/images/canal-midi.jpeg', alt: 'Canal du midi' }}
  >
    <Fragment slot="title">
      Toulouse > Bordeaux
    </Fragment>

    <Fragment slot="subtitle">
- 27/04: Toulouse
<br />- 28/04 : Montbarthier (40 km)
<br />- 29/04 : Dufort lacapelette (43km)
<br />- 30/04 : Valence d'Agen (33 km)
<br />- 1/05 : Agen (27 km)
<br />- 2/05 : Damazan (34 km)
<br />- 3/05 : Marmande (35 km)
<br />- 4/05 : Sauveterre de Guyenne (35 km)
<br />- 5/05 : Bordeaux (58 km)
    </Fragment>
  </Hero2>
