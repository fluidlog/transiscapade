---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';

import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'SaaS Landing Page',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Soutenez le projet',
          href: 'https://fr.tipeee.com/transiscapade',
        },
        {
          variant: 'primary',
          text: 'Page Facebook',
          href: 'https://www.facebook.com/profile.php?id=61556861211105',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Yannick"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Soutenez le projet', href: 'https://fr.tipeee.com/transiscapade' },
      { text: 'Page Facebook', href: 'https://www.facebook.com/profile.php?id=61556861211105' },
    ]}
    image={{ src: '~/assets/images/yannick-vhelio.png', alt: 'Yannick sur son vhélio' }}
  >
    <Fragment slot="title">
      Qui sui-je ?
    </Fragment>

    <Fragment slot="subtitle">
         Un passionné des alternatives de transition
         <br /> Voilà plusieurs années que pars à la recherche de nouvelles alternatives dans nos territoires...
    </Fragment>
  </Hero2>
